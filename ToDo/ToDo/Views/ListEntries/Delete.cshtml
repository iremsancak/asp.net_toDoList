@model ToDo.Models.ListEntry
@{
	Layout = null;
}
<div class="modal fade" data-backdrop="static" id="ListEntryDeleteModal" tabindex="-1" role="dialog">
<div class="modal-dialog modal-dialog-centered" role="document">
<div class="modal-content">
	<div class="modal-header p-4">
		<a href="#" onclick="CloseModal()">&#215</a>
		<h5>Delete ListEntry - @Html.DisplayFor(model => model.Description)</h5>
	</div>
	<div>
		<div class="p-4">
			<dt class="firstColumn">
				@Html.DisplayNameFor(model => model.Description)
			</dt>
			<dd class="secondColumn">
				@Html.DisplayFor(model => model.Description)
			</dd>
			<dt class="firstColumn">
				@Html.DisplayNameFor(model => model.isDone)
			</dt>
			<dd class="secondColumn">
				@Html.DisplayFor(model => model.isDone)
			</dd>

			<form asp-action="Delete" style="text-align: center;">
				<input type="hidden" asp-for="Id"/>
				<input type="submit" value="Delete" class="btn btn-danger " />
			</form>
		</div>
	</div>
</div>

</div>
</div>

<script>
	CloseModal = function () {
		$('#ListEntryDeleteModal').modal('hide');
	}
</script>